<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New WHT</h1>
    <form action="/admin/whts" method="POST" class='needs-validation' novalidate>
        <div class="form-group">
            <label for="code">WHT Code</label>
            <input class="form-control" type="text" id="code" name="wht[code]" minlength="2" maxlength="2" required>
            <label for="percentage" class="mt-3">WHT Percentage</label>
            <input class="form-control" type="number" id="percentage" name="wht[percentage]" max=100 required>
            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-success">Submit</button>
            </div>
            <div class="d-grid gap-2 mt-3">
                <a href="/admin" class="btn btn-warning">Go Back</a>
            </div>
        </div>
    </form>
</div>

