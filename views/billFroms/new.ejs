<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New Bill From Code</h1>
    <form action="/admin/billFroms/new" method="POST" novalidate class="needs-validation">
        <div class="form-group">
            <label for="description" class="mt-3">Add Bill From Code</label>
            <input class="form-control" type="text" id="description" name="billFrom[code]" minlength="2" maxlength="2" required>
            <div class="flex-d">
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-success">Save Bill From Code</button>
                </div>
            </div>
        </div>
    </form>
    <div class="d-grid gap-2 mt-3">
        <a href="/admin" class="btn btn-warning">Go Back</a>
    </div>
</div>

