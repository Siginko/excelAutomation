<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New Password</h1>
    <%- include('../partials/flash') %>
    <form action="/newPassword/<%=id%>/<%=token%>" method="POST" novalidate class="needs-validation">
        <div class="form-group">
            <label for="password">New Password</label>
            <input class="form-control" type="password" id="password" name="password" required> 
        </div>
        <div class="flex-d">
            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-success">Submit the New Passowrd!</button>
            </div>
        </div>
    </form>
</div>