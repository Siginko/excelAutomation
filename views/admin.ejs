                    <button class="btn btn-warning me-2">Edit</button>
                    </a>
                    <form action="/admin/billFroms/<%=billFrom._id%>/delete?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
            </div>
        </div>
        <% } %>
</div>
<div class="col-md-10 mt-4 mb-5 offset-1 d-flex flex-row">
</div>

