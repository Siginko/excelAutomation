<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New Supplier</h1>
    <form action="/suppliers" method="POST" class='needs-validation' novalidate>
        <div class="form-group">
            <label for="name">Supplier Name</label>
            <input class="form-control" type="text" id="name" name="supplier[name]" maxlength="15" required>
            <label for="id" class="mt-3">Supplier ID</label>
            <input class="form-control" type="text" id="id" name="supplier[id]" maxlength="15" required>
            <label for="id" class="mt-3">GSTIN</label>
            <input class="form-control" type="text" id="id" name="supplier[gstin]" maxlength="15" required>
            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-success">Submit</button>
            </div>
            <div class="d-grid gap-2 mt-3">
                <a href="/suppliers" class="btn btn-warning">Go Back</a>
            </div>
        </div>
    </form>
</div>

