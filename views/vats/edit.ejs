<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New VAT</h1>
    <form action="/admin/vats/<%=vat._id%>/edit?_method=PUT" method="POST" class='needs-validation' novalidate>
        <div class="form-group">
            <label for="code1">VAT Code</label>
            <input class="form-control" type="text" id="code" name="vat[code1]" value="<%=vat.code1%>" required>
            <label for="percentage1" class="mt-3">VAT1 Percentage</label>
            <input class="form-control" type="number" id="percentage1" name="vat[percentage1]" value="<%=vat.percentage1%>" required>
            <label for="code2" class="mt-3">VAT Code2</label>
            <input class="form-control" type="text" id="code2" name="vat[code2]" value="<%=vat.code2%>">
            <label for="percentage2" class="mt-3">VAT2 Percentage</label>
            <input class="form-control" type="number" id="percentage2" name="vat[percentage2]" value="<%=vat.percentage2%>">
            <div class="d-grid gap-2 mt-3">
                <button class="btn btn-success">Submit</button>
            </div>
            <div class="d-grid gap-2 mt-3">
                <a href="/admin" class="btn btn-warning">Go Back</a>
            </div>
        </div>
    </form>
</div>

