<% layout('layouts/boilerplate') %>
<div class="container col-lg-4 offset-lg-4">
    <h1 class="text-center m-3">New Department Code</h1>
    <form action="/admin/departmentCodes/new" method="POST" novalidate class="needs-validation">
        <div class="form-group">
            <label for="description" class="mt-3">Add Department Code</label>
            <input class="form-control" type="text" id="description" name="departmentCode[code]" required>
            <div class="flex-d">
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-success">Save Deparment Code</button>
                </div>
            </div>
        </div>
    </form>
    <div class="d-grid gap-2 mt-3">
        <a href="/admin" class="btn btn-warning">Go Back</a>
    </div>
</div>

